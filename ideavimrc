let mapleader = ' '

set hlsearch
set ignorecase smartcase
set clipboard=unnamed,unnamedplus
set scrolloff=5
set showmode
set number
set surround
"set relativenumber

inoremap jk <Esc>
vnoremap jk <Esc>

nnoremap Y y$

nnoremap <leader>fu :action FindUsages<cr>

nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-h> <c-w>h
nnoremap <c-k> <c-w>k

nnoremap <leader>v :split<CR>
nnoremap <leader>h :vsplit<CR>
