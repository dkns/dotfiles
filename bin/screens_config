#!/bin/zsh

if [ $(hostname) = 'serenity' ]; then
    xrandr --output DVI-D-0 --left-of HDMI-1 --output DP-0 --right-of HDMI-1 --output HDMI-1 --primary
fi

if [ $(hostname) = 'rp' ]; then
    xrandr --output VGA-0 --rotate left --left-of DVI-D-0 --output HDMI-0 --rotate left --right-of DVI-D-0 --output DVI-D-0 --primary
fi
