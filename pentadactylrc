"hg7163

loadplugins '\.(js|penta)$'
group user
set cdpath=''
set hintkeys=asdflkj
set showtabline=multitab
set incfind
set hlfind

map -b j 8j
map -b k 8k
map -b h 8h
map -b l 8l

hi -a HInt font-size: 9pt !important;

command private-tab -nargs=+ -description "Open Private Tab" -javascript <<EOF
    privateTab.readyToOpenTab(true);
    gBrowser.addTab("about:blank");
    dactyl.execute(":tablast");
    dactyl.execute(":open " + args);
    privateTab.stopToOpenTabs();
EOF

command internal-search -nargs=+ -javascript <<EOF
    dactyl.execute(":tabopen https://internal/wiki/index.php?search=" + args + "&title=Special%3ASearch");
EOF

command pmp -nargs=+ -javascript <<EOF
    dactyl.execute(":tabopen https://pw.enovation.lan:7272/STATE_ID/1426259469804/ShowViewInContentAreaAction.do?VIEW_TO_OPEN=SearchResult&CONTENTAREANAME=MainDAC&VIEW_UNIQUEID=SearchResult&ADDTOLIST=true&ACTION_SOURCE=SearchResult&searchtext=" + args + "&FLAG=TRUE&criteria=Search");
EOF

" vim: set ft=pentadactyl:
